			ولغاية تاريخ
			<span style="color:red">@(activeDays[4].ToString("dd/MM/yyyy"))</span>
			<span>
				(
				@if (totalPerEntity > 0)
				{
					@totalPerEntity
				} )
			</span>
		</h4>

	</div>
	<br />
